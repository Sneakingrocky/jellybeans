<form class="form" action="#">
  <label class="input__label">Team Name</label>
  <input type="text" class="input full-width">

  <label class="input__label">Team Photo</label>
  <input type="file" class="input__file">

  <div class="form__section-header">Team Members</div>
  <div class="input__container">
    <div class="input__prepend">1.</i></div>
    <input type="text" class="input full-width input--prepended">
  </div>
  <div class="input__container">
    <div class="input__prepend">2.</i></div>
    <input type="text" class="input full-width input--prepended input--appended">
    <div class="input__append"><i class="fa fa-remove"></i></div>
  </div>
  <div class="align-center">
    <a href="#">Add another team member</a>
  </div>

  <div class="form__actions">
    <div class="row">
      <div class="column half"><input type="submit" class="btn btn-primary full-width" value="Save"></div>
      <div class="column half"><a class="btn btn-secondary full-width" data-modal-close>Cancel</a></div>
    </div>
  </div>

</form>
